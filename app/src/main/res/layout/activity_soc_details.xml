<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/socDetailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/socHead"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#000">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/socImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/socAboutLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="About"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#00bf8f"
                    android:textStyle="italic"
                    android:typeface="normal" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/text1"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/socAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_marginTop="8dp"
                    android:text="@string/abc_action_bar_home_description" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/socMembersLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Members"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#00bf8f"
                    android:textStyle="italic"
                    android:typeface="normal" />

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/text2"
                    android:background="@android:color/darker_gray" />

                <com.exun.thaparexpress.model.ExpandableHeightGridView
                    android:id="@+id/gridView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line2"
                    android:gravity="center"
                    android:horizontalSpacing="2dp"
                    android:isScrollContainer="false"
                    android:numColumns="2"
                    android:layout_marginTop="8dp"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="20dp" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>